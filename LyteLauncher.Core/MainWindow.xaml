<Window x:Class="LyteLauncher.Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LyteLauncher.Core"
        mc:Ignorable="d"
        Title="LyteLauncher" Height="850" Width="1100" Background="#FF1B1B1B">
    <Grid Background="#FF1B1B1B">
        <Button x:Name="AddGameButton" Content="Add Game" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.467,0.603" Height="24" Width="105" BorderBrush="{x:Null}" Foreground="White" Background="{x:Null}" Click="AddGameButton_Click" Margin="92,0,0,0"/>
        <ListBox HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name="GamesList" Width="197" Margin="0,24,0,0" Background="#FF191919" BorderBrush="{x:Null}" Foreground="White" HorizontalAlignment="Left"/>
        <Button Content="Settings" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.467,0.603" Height="24" Width="92" BorderBrush="{x:Null}" Foreground="White" Background="{x:Null}" Click="AddGameButton_Click"/>
        <Canvas Margin="197,19,0,0" Background="#FF1B1B1B">
            <Label x:Name="GameText" Content="No Game Selected" Canvas.Left="10" Canvas.Top="10" Height="74" Width="883" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="48" HorizontalContentAlignment="Center" Foreground="White"/>
            <Button x:Name="PlayButton" Style="{StaticResource ResourceKey=Rounded}" Content="Play" Height="82" Canvas.Left="248" Canvas.Top="89" Width="100" FontSize="24" BorderBrush="{x:Null}" Foreground="White" Background="#FF5910FF" Click="PlayButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label x:Name="GamePlaytime" Content="None" Height="62" Canvas.Left="353" Canvas.Top="109" Width="246" RenderTransformOrigin="0.509,0.049" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White"/>
            <Label x:Name="TimeLabel" Content="Playtime" Height="62" Canvas.Left="366" Canvas.Top="78" Width="220" RenderTransformOrigin="0.509,0.049" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="22" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF464646"/>
        </Canvas>

    </Grid>
</Window>
